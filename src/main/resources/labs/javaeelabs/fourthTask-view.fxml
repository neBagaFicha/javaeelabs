      </Label>
      <Label layoutX="457.0" layoutY="438.0" text="To:">
         <font>
            <Font name="Segoe UI Bold" size="15.0" />
         </font>
      </Label>
      <TextField fx:id="textFieldFrom" layoutX="481.0" layoutY="396.0" prefHeight="26.0" prefWidth="60.0" />
